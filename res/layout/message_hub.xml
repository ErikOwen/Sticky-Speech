<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
    	<LinearLayout
    	    android:id="@+id/newNoteTitleLayout"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:weightSum="1"
    		android:background="@color/black">
    		<RelativeLayout 
    		    android:layout_width="0dp"
    		    android:layout_height="wrap_content"
    		    android:layout_weight=".2" >
    		    <ImageView
    		        android:layout_height="45dp"
    		        android:layout_width="45dp"
    		        android:layout_centerInParent="true"
    		        android:src="@drawable/sticky_icon_large_white"/>
    		</RelativeLayout>
			<TextView 
			    android:id="@+id/MessageHubTitle"
			    android:layout_height="wrap_content"
			    android:layout_width="0dp"
			    android:text="@string/stickySpeech"
			    android:textSize="30sp"
			    android:layout_gravity="center"
			    android:textColor="@color/white"
			    android:layout_weight=".65" />
			<RelativeLayout 
			    android:layout_width="0dp"
    		    android:layout_height="wrap_content"
    		    android:layout_weight=".15">
			    <Button 
    	        	android:id="@+id/searchButton"
    	        	android:layout_width="45dp"
    	        	android:layout_height="45dp"
    	        	android:layout_gravity="left|center_vertical"
    	        	android:background="@drawable/search_icon_selector"/>
			</RelativeLayout>

    	</LinearLayout> 
    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="horizontal"
    	    android:background="@color/black" >
    		<EditText android:id="@+id/inputSearch"
            	android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:hint="Search Stickies..."
        		android:padding="5dp"
        		android:background="@color/white"
        		android:inputType="textVisiblePassword"/>
    	    
    	</LinearLayout>

        
        <ListView
            android:id="@+id/android:list"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </ListView>
    
</LinearLayout> 